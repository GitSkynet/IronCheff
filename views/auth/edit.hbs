<section class="create-recipe">
    <form action = "edit" enctype="multipart/form-data" method = "POST" >
    <h2>Edita tu receta!</h2>
      <div>
        <label for = "name"> Name </label>
        <input type = "text" name = "name" id = "name" value="{{ findrecipe.name }}">
      
        <label for = "ingredients"> Ingredients </label>
        <input type = "text" name = "ingredients" id = "ingredients" value="{{ findrecipe.Ingredients }}">

        <label for = "instructions">instructions</label>
        <input type = "text" name = "instructions" id = "instructions" value="{{ findrecipe.instructions }}">

        <label for="name">Tipo cocina</label>
        <select name="cuisine">
            <option value="Española">Española</option> 
            <option value="Japonesa">Japonesa</option>
            <option value="Argentina">Argentina</option>
            <option value="Catalana">Catalana</option>
            <option value="Italiana">Italiana</option>
            <option value="Mexicana">Mexicana</option>
            <option value="Americana">Americana</option>
        </select>

        <label for="name">Tipo plato</label>
        <select name="typefood">
            <option value="Entrantes">Entrantes</option> 
            <option value="Primero">Primero</option>
            <option value="Segundo">Segundo</option>
            <option value="Postre">Postre</option>
        </select>

        <label for = "name">Imagen</label>
        <input type = "file" name = "photo" id = "image" value="{{ findrecipe.image }}">

        <label for = "diners">Comensales</label>
        <input type = "text" name = "diners" id = "diners" value="{{ findrecipe.diners }}">
        
        <label for = "score">Puntuación</label>
        <input type = "text" name = "score" id = "score" value="{{ findrecipe.score }}">
      <button> Submit </button>
      </div>
    </form>
    </section>

