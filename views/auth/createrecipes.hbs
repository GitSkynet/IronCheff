<section class="create-recipe">
    <form action="/createrecipe"  enctype="multipart/form-data" method="POST">
        <h2>Crea tu receta!</h2>
        {{!-- <img src="/images/form-recetas.jpg" alt=""> --}}
        <label for="name">Nombre</label>
        <input type="name" name="name" placeholder="Introduce nombre">
        
        <label for="name">Instructions</label>
        <textarea type="name" name="instructions" cols="40" rows="10" placeholder="Introduce instrucciones"></textarea>

        <label for="name">Tipo cocina</label>
        <input type="name" name="cuisine" placeholder="Tipo de cocina...">

        <label for="name">Ingredientes</label>
        {{!-- <input type="text" name="ingredients" placeholder="Ingredientes"> --}}
        <textarea type="text" name="ingredients" cols="40" rows="10" placeholder="Añade ingredientes"></textarea>

        <label for="name">Image</label>
        <input type="file" name="photo" placeholder="Introduce imagen">

        <label for="name">Comensales</label>
        <input type="name" name="diners" placeholder="Cuántos comensales?">
        <button>Create recipe</button>
    </form>
</section>

