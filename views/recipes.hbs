<section class="section1-recetas">
    <div>
    <h2>Recetas</h2>
    <p>Navega entre todas nuestras recetas, encuentra la que más te guste, márcala como favorita... y disfruta!!</p>
    
</div>
</section>

<section class="section-recetas">
{{#each receta}}
<div class="div-recetas">
    <img src="{{this.image}}" alt="">
    <div class="div-recetas2">
        <h3>{{this.name}}</h3>
        <h4>Tipo de cocina: {{this.cuisine}}</h4>
        <h4>Comensales: {{this.diners}}</h4>
        <h4>Creador: {{this.creator}}</h4>
        <a class="button-recipes" href="{{this._id}}">Detalles</a>
         {{#if isCreator}} 
        <a href="{{this._id}}/edit">Editar receta</a>
        {{/if}}
    </div>
</div>
{{/each}}
</section>


